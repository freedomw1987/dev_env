# change window focus within space
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east

#change focus between external displays (left and right)
alt - s: yabai -m display --focus west
alt - g: yabai -m display --focus east

# rotate layout clockwise
shift + alt - r : yabai -m space --rotate 270

# toggle window float
shift + alt - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

# maximize a window
shift + alt - m : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
shift + alt - e : yabai -m space --balance

# 1/3 size
shift + alt - left : yabai -m window --ratio abs:0.6;
shift + alt - right : yabai -m window --ratio abs:0.4;

# move window to display left and right
shift + alt - a : yabai -m window --display west; yabai -m display --focus west;
shift + alt - d : yabai -m window --display east; yabai -m display --focus east;
shift + alt - w : yabai -m window --display north; yabai -m display --focus north;
shift + alt - s : yabai -m window --display south; yabai -m display --focus south;

# move window to space #
shift + ctrl - 1 : yabai -m window --space 1;
shift + ctrl - 2 : yabai -m window --space 2;
shift + ctrl - 3 : yabai -m window --space 3;
shift + ctrl - 4 : yabai -m window --space 4;
shift + ctrl - 5 : yabai -m window --space 5;
shift + ctrl - 6 : yabai -m window --space 6;
shift + ctrl - 7 : yabai -m window --space 7;
shift + ctrl - 8 : yabai -m window --space 8;
shift + ctrl - 9 : yabai -m window --space 9;
shift + ctrl - 0 : yabai -m window --space 10;

shift + alt - 1 : yabai -m window --space 11;
shift + alt - 2 : yabai -m window --space 12;
shift + alt - 3 : yabai -m window --space 13;
shift + alt - 4 : yabai -m window --space 14;
shift + alt - 5 : yabai -m window --space 15;

